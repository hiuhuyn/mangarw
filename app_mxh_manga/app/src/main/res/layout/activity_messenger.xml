<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme_layout"
    tools:context=".messenger.Activity_messenger">
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/ib_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_navigate_before_40"
            android:background="@drawable/btn_text"
            android:layout_marginEnd="20dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/iv_avt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:padding="10dp"
            style="@style/Theme_textView"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_messenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl"
        android:layout_below="@+id/ll1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rv_images"
        android:minHeight="50dp"
        android:padding="10dp">

        <Spinner
            android:id="@+id/spinner_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/edt_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_baseline_widgets_40" />

        <EditText
            android:id="@+id/edt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_toStartOf="@id/ib_send"
            android:layout_toEndOf="@id/spinner_gallery"
            android:background="@drawable/chat_content"
            android:backgroundTint="#E9E9E9"
            android:hint="Nháº¯n tin"
            android:minWidth="150dp"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/ib_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/edt_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_text"
            android:src="@drawable/ic_baseline_send_24" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        />


</RelativeLayout>