<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme_transparent"
        android:layout_alignParentTop="true"
        app:menu="@menu/menu_setting"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingBottom="50dp"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardElevation="0dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white_30"
            app:cardCornerRadius="50dp">
            <ImageView
                android:id="@+id/iv_avt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_baseline_person_40"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:maxLines="1"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lv 0"
            android:textSize="20dp"
            android:background="@drawable/border"
            android:layout_margin="10dp"
            android:textStyle="bold|italic"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:maxLength="10"
            android:backgroundTint="#03A9F4"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@android:color/transparent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người theo dõi: "
                android:textSize="17dp"
                android:background="@android:color/transparent"
                android:textColor="@color/black_50"
                />
            <TextView
                android:id="@+id/tv_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textColor="@color/black_50"
                android:maxLines="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang theo dõi: "
                android:textSize="17dp"
                android:background="@android:color/transparent"
                android:textColor="@color/black_50"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/tv_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:background="@android:color/transparent"
                android:textStyle="bold"
                android:textColor="@color/black_50"
                android:maxLines="1"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#C1C9C9C9"/>
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:elevation="0dp"
        android:src="@drawable/ic_baseline_draw_40"
        android:backgroundTint="#2DBEFF"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="20dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:background="@drawable/shape_oval_story"
        android:backgroundTint="@color/white"
        android:indeterminateTint="#0090FF"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:visibility="gone"
        />

</RelativeLayout>