<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage.component.profile.component.Activity_EditProfile">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_40"
        app:title="Chỉnh sửa trang cá nhân"
        app:menu="@menu/menu_check"
        android:layout_alignParentTop="true"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingBottom="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Họ và tên"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bogoc"
                android:backgroundTint="@color/light_gray"
                android:textSize="25dp"
                android:hint="Nhập tên của bạn"
                android:maxLength="255"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Email"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bogoc"
                android:backgroundTint="@color/light_gray"
                android:textSize="25dp"
                android:hint="Email"
                android:padding="10dp"
                android:enabled="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Ảnh đại diện"
                android:layout_marginTop="10dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="100dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/light_gray"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_avt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Ảnh bìa"
                android:layout_marginTop="10dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/light_gray"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Tiểu sử"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/edt_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bogoc"
                android:backgroundTint="@color/light_gray"
                android:textSize="25dp"
                android:hint="Mô tả bản thân...\nTối đa 255 ký tự"
                android:maxLength="255"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Sinh nhật"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/edt_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bogoc"
                android:backgroundTint="@color/light_gray"
                android:textSize="25dp"
                android:hint="Nhập ngày sinh của bạn"
                android:maxLength="255"
                android:padding="10dp"
                android:inputType="date"
                android:focusable="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="Giới tính"
                android:layout_marginTop="10dp"
                />
            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:checked="true"
                    android:layout_margin="10dp"
                    android:textSize="25dp"/>
                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:layout_margin="10dp"
                    android:textSize="25dp"/>
            </RadioGroup>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>