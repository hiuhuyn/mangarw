<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        >
        <ImageView
            android:id="@+id/iv_avt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/cardView"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bogoc"
            android:backgroundTint="@color/light_gray"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme_textView"
                android:text="Nguyễn minh quân"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung commment"
                android:textStyle="normal"
                style="@style/Theme_textView"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme_textView"
                android:textSize="12sp"
                android:text="29/11/2002"
                android:textColor="#CD3F3F3F"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btn_like"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="Thích"
                android:textSize="12sp"
                android:background="@drawable/btn_text"
                android:textAllCaps="false"
                android:textColor="#CD3F3F3F"
                />
            <Button
                android:id="@+id/btn_reply"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Phản hồi"
                android:textSize="12sp"
                android:background="@drawable/btn_text"
                android:textAllCaps="false"
                android:textColor="#CD3F3F3F"
                />
            <TextView
                android:id="@+id/tv_count_like"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="0 "
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="#CD3F3F3F"
                android:gravity="end|center_vertical"
                app:drawableEndCompat="@drawable/ic_baseline_thumb_up_24"
                android:visibility="gone"
                android:ellipsize="end"
                />

        </LinearLayout>
        <Button
            android:id="@+id/btn_showCmt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Xem 1 phản hồi khác..."
            android:textSize="12sp"
            android:background="@drawable/btn_text"
            android:textAllCaps="false"
            android:visibility="gone"
            />
        <ListView
            android:id="@+id/listView_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </LinearLayout>
</RelativeLayout>