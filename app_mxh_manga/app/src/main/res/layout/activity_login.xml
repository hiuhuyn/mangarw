<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Activity_Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/logo_mangarw"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            />
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ email"
            android:padding="10dp"
            android:textSize="25dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:paddingStart="20dp"
            android:maxLines="2"
            />
        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:padding="10dp"
            android:textSize="25dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
            android:paddingStart="20dp"
            android:maxLines="1"
            android:maxLength="10"
            android:text=""
            android:inputType="textPassword"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:weightSum="2">
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Đăng ký"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/selector_btn_rg30"
                android:backgroundTint="#C1101010"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                />
            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Đăng nhập"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/selector_btn_rg30"
                android:backgroundTint="#00E409"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_forgot_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            />

        <Button
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:drawableStart="@drawable/google"
            android:text="Tiếp tục với google"
            android:background="@drawable/selector_btn_rg30"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:layout_margin="30dp"
            android:textAllCaps="false"
            />
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:background="@drawable/shape_oval_story"
        android:backgroundTint="@color/white"
        android:indeterminateTint="#0090FF"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:visibility="gone"
        />
</RelativeLayout>

