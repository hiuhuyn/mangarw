<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage.component.readmanga.component.Fragment_Recommend">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/story_hot"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            layout="@layout/layout_rmd_story_1"
            android:layout_marginVertical="20dp"
            />
        <include
            android:id="@+id/story_bxh_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_rmd_2_tab_vp2_rv_story"
            android:layout_marginVertical="20dp"
            />
        <include
            android:id="@+id/newStory_novel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_rmd_story_1"
            android:layout_marginVertical="20dp"
            />
        <include
            android:id="@+id/newStory_manga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_rmd_story_1"
            android:layout_marginVertical="20dp"
            />
    </LinearLayout>

</ScrollView>