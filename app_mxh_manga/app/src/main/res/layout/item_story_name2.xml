<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/Theme_LayoutItem"
    android:layout_marginVertical="5dp"
    android:paddingVertical="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_raring"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:text=""
        android:maxLines="1"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        />

    <ImageView
        android:id="@+id/imageAvt"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_restart_alt_40"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:background="@drawable/shape_bogoc"
        android:layout_toEndOf="@+id/tv_raring"
        android:backgroundTint="@color/light_gray"
        android:outlineProvider="background"
        android:clipToOutline="true"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageAvt"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingHorizontal="10dp"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/img_like"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_baseline_thumb_up_alt_40"
        android:layout_below="@id/tv_name"
        android:layout_toEndOf="@id/imageAvt"
        android:background="@android:color/transparent"
        android:layout_marginHorizontal="10dp"
        />
    <TextView
        android:id="@+id/tv_likes"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/tv_name"
        android:layout_toEndOf="@id/img_like"
        android:text=""
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:textSize="15sp"
        />


</RelativeLayout>