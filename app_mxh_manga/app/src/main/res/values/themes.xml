<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App_mxh_manga" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Theme_transparent" parent="Theme.App_mxh_manga">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
    <style name="Them_datePickerDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#212121</item>
        <item name="colorAccent">@color/black_50</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme_textView" parent="Theme.App_mxh_manga">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
    <style name="Theme_EditText" parent="Theme.App_mxh_manga">
        <item name="android:textSize">17sp</item>
        <item name="backgroundTint">#5B9A9A9A</item>
        <item name="android:textColor">#313131</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Toolbar" parent="Theme.App_mxh_manga">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme_layout" parent="Theme.App_mxh_manga">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="Theme_layout_item" parent="Theme.App_mxh_manga">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:background">@color/light_gray</item>
    </style>

</resources>